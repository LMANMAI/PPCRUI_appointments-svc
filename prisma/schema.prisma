
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}
enum SlotStatus {
  FREE        // disponible
  RESERVED    // tomado por paciente
  CONFIRMED   // confirmado
  CANCELLED   // cancelado
  COMPLETED   // atendido
}

enum SlotSpecialty {
  CLINICA_MEDICA
  CARDIOLOGIA
  PEDIATRIA
  GINECOLOGIA
  OBSTETRICIA
  TRAUMATOLOGIA
  DERMATOLOGIA
  NEUROLOGIA
  PSICOLOGIA
  PSIQUIATRIA
  ODONTOLOGIA
  KINESIOLOGIA
  NUTRICION
  FONOAUDIOLOGIA
  OFTALMOLOGIA
  OTORRINOLARINGOLOGIA
  UROLOGIA
}

model Slot {
  id            String     @id @default(uuid())
  centerId      Int
  
  staffUserId   String      // operador/asignado
  patientUserId String?     // paciente

  startAt       DateTime
  endAt         DateTime
  specialty     SlotSpecialty?
  status        SlotStatus  @default(FREE)

  notes         String?
  cancelReason  String?
  cancelledAt   DateTime?

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([centerId, startAt])
  @@index([patientUserId, startAt])
  @@index([staffUserId, startAt])
}

