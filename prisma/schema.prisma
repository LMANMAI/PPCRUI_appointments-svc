
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum SlotStatus {
  FREE
  BOOKED
}

model Appointment {
  id            String            @id @default(uuid())
  orgId         String
  centerId      Int           

  patientUserId String
  staffUserId   String?
  slotId        String?  @unique
  slot          Slot?    @relation(fields: [slotId], references: [id])

  status        AppointmentStatus @default(PENDING)
  startAt       DateTime
  endAt         DateTime
  notes         String?
  cancelReason  String?
  cancelledAt   DateTime?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@index([orgId, centerId, startAt])
  @@index([patientUserId, startAt])
  @@index([staffUserId, startAt])
}

model Slot {
  id           String     @id @default(uuid())
  centerId     Int                         

  staffUserId  String
  startAt      DateTime
  endAt        DateTime

  status       SlotStatus @default(FREE)
  reservedById String?

  appointment  Appointment?

  @@unique([staffUserId, startAt])
  @@index([centerId, staffUserId, startAt])
}
